@using System.Data;
@{
    ViewBag.Title = "Home Page";
}

<div class="alert-info"><h2>Transaction Data</h2>
    @using (Html.BeginForm("Index",
                    "Home",
                    FormMethod.Post,
                    new { enctype = "multipart/form-data" }))
    {
       <div class="row">
           <div class="col-lg-3"> <label for="file">Upload Image:</label> </div>
           <div class="col-lg-3"> <input type="file" name="file" id="file" /> </div>
           <div class="col-lg-6"> <input type="submit" value="Upload Image" /> <span style="color:red;"> @ViewBag.ErrorMsg</span></div>
       </div> 

        <hr />

    }
</div>


